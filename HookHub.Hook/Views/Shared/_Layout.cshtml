<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>HookHub - Hook</title>

    <link rel="icon" type="image/png" href="~/images/HookHubIcon.png" />

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js" crossorigin="anonymous">
    </script>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        crossorigin="anonymous">

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        crossorigin="anonymous"></script>

    <!-- Global site styles -->
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)

</head>

<body>
    <nav class="navbar navbar-dark navbar-expand-lg bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center gap-2 fw-semibold" asp-controller="Home"
                asp-action="Index">

                <img src="~/images/HookHubIcon.png" alt="HookHub" width="28" height="28"
                    class="d-inline-block align-text-top" />

                <span>HookHub @ViewData["Title"]</span>
            </a>


            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNavbar">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="About">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Contact">Contact</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>


    <partial name="_CookieConsentPartial" />

    <main class="container body-content">
        @RenderBody()
        <div id="loadingOverlay" class="position-fixed top-0 start-0 w-100 h-100 d-none
            bg-dark bg-opacity-50 d-flex align-items-center justify-content-center" style="z-index: 2000;">

            <div class="text-center text-white">
                <div class="spinner-border mb-3" role="status"></div>
                <div>Processing…</div>
            </div>
        </div>
    </main>

    <!-- FIXED FOOTER (ALWAYS VISIBLE) -->
    <footer class="footer fixed-bottom bg-dark text-light">
        <div class="container text-center py-2">
            <small>&copy; @DateTime.Now.Year - HookHub Net</small>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/js/layout.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>

</html>